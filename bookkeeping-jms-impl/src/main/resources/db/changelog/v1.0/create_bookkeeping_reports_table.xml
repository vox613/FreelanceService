<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="Alexey Alexandrov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists schemaName="bookkeeping" tableName="reports"/>
            </not>
        </preConditions>
        <createTable tableName="book_keeping_reports"
                     schemaName="bookkeeping"
                     remarks="Таблица бухгалтерских отчетов с данными завершенных контрактов">

            <column name="id" type="uuid" remarks="Уникальный идентификатор события">
                <constraints nullable="false"/>
            </column>

            <column name="ack_status" type="varchar(255)" remarks="Статус ответа о получении отчета">
                <constraints nullable="false"/>
            </column>

            <column name="creation_date" type="timestamp with time zone" remarks="Дата и время создания записи">
                <constraints nullable="false"/>
            </column>

            <column name="contract_report" type="json" remarks="Данные отчета">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <comment>Задача по созданию таблицы логирования статусов отправки отчетов в сервис бухгалтерии</comment>
    </changeSet>

</databaseChangeLog>